@model Bounds.Models.b_Role

<div>
    <h5>@Html.ActionLink("返回", "Index")</h5>
</div>

    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.b_Role_Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.b_Role_Name, new { htmlAttributes = new { @class = "form-control col-md-8" } })
                @Html.ValidationMessageFor(model => model.b_Role_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.b_Role_Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.b_Role_Description, new { htmlAttributes = new { @class = "form-control col-md-8" } })
                @Html.ValidationMessageFor(model => model.b_Role_Description, "", new { @class = "text-danger" })
            </div>
        </div>

        @{ Html.RenderAction("Show", "b_Auth");}

        <div class="form-group">
            <div class="col-md-1 col-md-offset-5">
                <input type="submit" value="保存" onclick="Auth.Add(); return;" class="btn btn-success" />
            </div>
            <div class="col-md-1">
                <input type="reset" value="取消" oncancel="javascript:history.go(-1)" class="btn btn-default" />
            </div>
        </div>
    </div>


@model IEnumerable<Bounds.Models.b_Role>

<p>
    @Html.ActionLink("新建角色", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.b_Role_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.b_Role_Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Created_Time)
        </th>
        <th>操作</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.b_Role_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.b_Role_Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Created_Time)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |

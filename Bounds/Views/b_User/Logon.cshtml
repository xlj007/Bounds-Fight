@{
    Layout = "~/Views/_View_Without_Menu.cshtml";
    ViewBag.Title = "系统登录";
}
@model Bounds.Models.b_User

<h2>系统登录</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Logon", "b_User", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <hr />
                @Html.ValidationSummary(true, "用户名或密码错误，请重试。", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.b_UserName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.b_UserName, new { @class = "form-control", @Value = "Admin", @placeholder = "用户名" })
                        @Html.ValidationMessageFor(m => m.b_UserName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.b_Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.b_Password, new { @class = "form-control", @Value = "123" })
                        @Html.ValidationMessageFor(m => m.b_Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.b_Enterprise_ID, new { @class = "col-md-2 control-label"})
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.b_Enterprise_ID, new { @class = "form-control", @Value = "11000", @placeholder = "企业代码"})
                        @Html.ValidationMessageFor(m=>m.b_Enterprise_ID, "", new { @class = "text-danger"})
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="登录" class="btn btn-default" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
